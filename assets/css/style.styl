body
    margin: 0
    padding: 0
    font-family: system-ui
    header
        display: flex
        align-items: center
        text-align: center
        flex-direction: column
        background: #8f8f8f
        padding: 10px 0
        box-shadow: 0px 2px 2px 2px rgba(51,49,35,1)
        h1, h2 
            color: rgb(255, 235, 235)
        h1
            margin: 5px 0
        h2 
            margin: 2px 0

    section
        background: #FEFEFE
        display: flex
        justify-content: center
        padding: 40px 0
        h2  
            align-self: center
            background: #333
            color: white
            padding: 10px 40px
            border-radius: 12px
        form 
            display: flex
            margin: 20px 60px
            width: 40vw
            height: 40vh
            flex-direction: column
            justify-content: space-between
            border: 1px solid #333
            padding: 20px 60px
            border-radius: 12px
            background: #d0d0d0
            div
                display: flex
                justify-content: space-between
                color: #fff
                label
                    flex-grow: 1
                    width: 10vw
                input, textarea
                    flex-grow: 1
                input[type=submit]
                    padding: 10px 0
                    color: #FFF
                    border: none
                    border-radius: 8px
        

