body
    margin:0
    padding:0
    font-family: system-ui

    header
        display: flex
        flex-direction: column
        justify-content: space
        align-items: center
        background: #8f8f8f
        box-shadow: 0 0 10px 0 rgba(0,0,0,0.5)
        h1,h2
            color: white
        h1
            margin: 5px 0
        h2
            margin: 2px 0

    section
        background: #fefefe
        display: flex
        justify-content: center
        align-items: center
        h2
            align-self: center
            background: #333
            color: white
            padding: 10px 40px
            border-radius: 12px
        form
            display: flex
            flex-direction: column
            justify-content: space-between
            padding: 20px 60px
            width: 50%
            height: 40vh
            border: 5px solid black;
            border-radius: 20px
            div
                display: flex
                justify-content: space-between
                label
                    flex-grow: 1
                    width: 10vw
                input
                    flex-grow: 1
                textarea
                    flex-grow: 1